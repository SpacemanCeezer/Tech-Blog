<h2>{{post.title}}</h2>
<p>{{post.content}}</p>
<h3>Comments</h3>
{{#each comments}}
    <div class="comment">
        <p>{{this.content}}</p>
        <p>By: {{this.User.username}}</p>
    </div>
{{/each}}
<h3>Add Comment</h3>
<form id="comment-form" action="/post/{{post.id}}/comment" method="POST">
    <textarea name="content" placeholder="Your comment"></textarea>
    <button type="submit">Submit</button>
</form>
